{
  "extends": "stylelint-config-standard",
  "rules": {
    "color-hex-case": "lower",
    "value-keyword-case": [
      "lower",
      {
        "ignoreFunctions": [
          "t",
          "var"
        ]
      }
    ],
    "selector-class-pattern": ["^([a-z][a-z0-9]*)(_*[a-z0-9]+)*$", "^([a-z][a-z0-9]*)(__[a-z0-9]+)*$"]
  },
  "ignoreFiles": [
    "build/*"
  ]
}
