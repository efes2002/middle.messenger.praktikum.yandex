{
  "compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"src/*": [
				"./src/*"
			],
			"static/*": [
				"./static/*"
			]
		},
		"outDir": "dist",
    "target": "esNext",
    "module": "commonjs",
    "declaration": "false",
    "lib": ["ES2019", "DOM"],
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
