<section class="form">
    <h1 class="form__title">{{title}}</h1>
    <div class="form__lists">
        {{#each items}}
            <label class="form__field" id={{id}}>
                <h2 class="form__input-title">{{title}}</h2>
                <input class="form__input" value={{value}}></input>
                <div class="form__input-line"></div>
                <span class="form__input-error"/>
                    {{#if error}} {{errorText}} {{/if}}
                </span>
            </label>
        {{/each}}
    </div>

    {{#if errorBox.isErrorBox}}
        <div class="form__sign-box">{{errorBox.text}}</div>
    {{/if}}

    {{#if currentPage.isLogin}}
        <button class="form__button cursor-hover" onclick="renderPage('chats')">{{button.title}}</button>
        <a class="form__link cursor-hover" onclick="renderPage('registration')">{{link.title}}</a>
    {{/if}}

    {{#if currentPage.isRegis}}
        <button class="form__button cursor-hover" onclick="renderPage('login')">{{button.title}}</button>
        <a class="form__link cursor-hover" onclick="renderPage('chats')">{{link.title}}</a>
    {{/if}}

</section>
